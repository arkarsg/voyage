{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "prettier",
    "plugin:json/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "metro.config.js",
    "babel.config.js",
    "index.js",
    "sync.config.js"
  ],
  "rules": {
    "semi": [2, "always"]
  }
}
